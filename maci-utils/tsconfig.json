{
  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./build",
    "declaration": true
  },
  "exclude": ["node_modules/**"],
  "include": ["./src"]
}
